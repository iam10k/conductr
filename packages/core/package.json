{
  "name": "@conductr/core",
  "version": "1.7.0",
  "description": "Conductr",
  "author": "iam10k",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iam10k/conductr.git"
  },
  "bugs": {
    "url": "https://github.com/iam10k/conductr/issues"
  },
  "keywords": [
    "discord",
    "discordjs",
    "discord bot",
    "interactions"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "changelog": "git cliff --prepend ./CHANGELOG.md -u -c ./cliff.toml -r ../../ --include-path 'packages/core/*'",
    "release": "cliff-jumper"
  },
  "devDependencies": {
    "@favware/cliff-jumper": "^4.1.0",
    "@types/deep-equal": "^1.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.47",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.0",
    "ts-jest": "^29.3.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@discordjs/builders": "^1.11.2",
    "@discordjs/rest": "^2.5.0",
    "deep-equal": "^2.2.3",
    "eventemitter3": "^5.0.1",
    "reflect-metadata": "^0.2.2",
    "ts-mixer": "^6.0.4"
  },
  "peerDependencies": {
    "@discordjs/core": "^2.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": "test/.*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      ".*/index.ts$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
